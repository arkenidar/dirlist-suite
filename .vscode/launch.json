{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "arkenidar.com -- Launch PHP Built-in Server",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/router.php",
            "cwd": "${workspaceFolder}",
            "port": 9003,
            "serverReadyAction": {
                "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            },
            "runtimeArgs": [
                "-S",
                "localhost:8080",
                "-t",
                "${workspaceFolder}",
                "${workspaceFolder}/router.php"
            ],
            "env": {
                "XDEBUG_MODE": "debug",
                "XDEBUG_CONFIG": "client_port=9003"
            }
        }
    ]
}